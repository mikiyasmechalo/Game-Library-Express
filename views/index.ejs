<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Game Inventory</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-dark text-white p-5">
  <div class="container-fluid">
    <h1 class="text-center mb-4 text-info">Game Inventory</h1>

    <div class="row">
      <!-- Game Inventory Table -->
      <div class="col-lg-12">
        <% if(locals.games && locals.games.length> 0) { %>
          <div class="table-responsive">
            <table class="table table-dark table-striped table-hover table-bordered border-light">
              <thead>
                <tr>
                  <th scope="col">Title</th>
                  <th scope="col">Genres</th>
                  <th scope="col">Publishers</th>
                  <th scope="col">Rating</th>
                  <th scope="col">Release Date</th>
                </tr>
              </thead>
              <tbody>
                <% games.forEach(game=> { %>
                  <tr>
                    <td><a href="/games/<%= game.id %>" class="text-info text-decoration-none">
                        <%= game.title %>
                      </a></td>
                    <td>
                      <% game.genres.forEach((genre, index)=> { %>
                        <a href="/genres/<%= genre.id %>" class="badge bg-info text-decoration-none text-black">
                          <%= genre.name %>
                        </a>
                        <%= index < game.genres.length - 1 ? ',' : '' %>
                          <% }); %>
                    </td>
                    <td>
                      <% game.publishers.forEach((publisher, index)=> { %>
                        <a href="/publishers/<%= publisher.id %>" class="badge bg-info text-decoration-none text-black">
                          <%= publisher.name %>
                        </a>
                        <%= index < game.publishers.length - 1 ? ',' : '' %>
                          <% }); %>
                    </td>
                    <td>
                      <%= game.rating %>
                    </td>
                    <td>
                      <%= new Date(game.release_date).toLocaleDateString() %>
                    </td>
                  </tr>
                  <%}) %>
              </tbody>
            </table>
          </div>
          <%} else { %>
            <div class="alert alert-warning text-center" role="alert">
              No games found!
            </div>
            <%} %>
      </div>
    </div>
    <a href="/publishers" class="btn btn-info btn-lg rounded-pill shadow-sm mb-3">All Publishers</a> <br>
    <a href="/genres" class="btn btn-info btn-lg rounded-pill shadow-sm mb-3">All Genres</a> <br>
    <a href="/games/create" class="btn btn-info btn-lg rounded-pill shadow-sm mb-3">Add new Game/ publisher/ Genre</a>
  </div>

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>