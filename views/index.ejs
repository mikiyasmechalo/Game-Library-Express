<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Game Library</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Tailwind CSS (assumes a CDN link is available) -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-dark text-white p-5">
  <div class="container-fluid">
    <h1 class="text-center mb-4 text-info display-4 fw-bold">Game Library</h1>

    <!-- Action Buttons -->
    <div class="d-flex flex-wrap justify-content-center gap-3 mb-5">
      <a href="/publishers" class="btn btn-info btn-sm rounded-pill shadow-sm">All Publishers</a>
      <a href="/genres" class="btn btn-info btn-sm rounded-pill shadow-sm">All Genres</a>
      <a href="/games/create" class="btn btn-info btn-sm rounded-pill shadow-sm">Add New Game</a>
    </div>

    <!-- Game Cards -->
    <% if(locals.games && locals.games.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <% games.forEach(game => { %>
          <div class="col">
            <div class="card h-100 bg-secondary text-white border border-info rounded-3">
              <!-- Game Image -->
              <img src="<%= game.image %>" class="card-img-top img-fluid rounded-top" alt="<%= game.title %> image" onerror="this.onerror=null;this.src='https://placehold.co/600x400/17a2b8/000000?text=No+Image+Found';">
              <div class="card-body d-flex flex-column">
                <!-- Game Title Link -->
                <h5 class="card-title text-info fw-bold">
                  <a href="/games/<%= game.id %>" class="text-decoration-none text-info">
                    <%= game.title %>
                  </a>
                </h5>
                <!-- Genres -->
                <p class="card-text mb-2">
                  <span class="fw-bold">Genres:</span>
                  <% if (game.genres && game.genres.length > 0) { %>
                    <% game.genres.forEach(genre => { %>
                      <a href="/genres/<%= genre.id %>" class="badge bg-info text-dark text-decoration-none">
                        <%= genre.name %>
                      </a>
                    <% }); %>
                  <% } else { %>
                    N/A
                  <% } %>
                </p>
                <!-- Publishers -->
                <p class="card-text mb-2">
                  <span class="fw-bold">Publishers:</span>
                  <% if (game.publishers && game.publishers.length > 0) { %>
                    <% game.publishers.forEach(publisher => { %>
                      <a href="/publishers/<%= publisher.id %>" class="badge bg-info text-dark text-decoration-none">
                        <%= publisher.name %>
                      </a>
                    <% }); %>
                  <% } else { %>
                    N/A
                  <% } %>
                </p>
                <!-- Rating and Release Date -->
                <p class="card-text mb-2 mt-auto">
                  <span class="fw-bold">Rating:</span> <%= game.rating %> |
                  <span class="fw-bold">Release Date:</span> <%= new Date(game.release_date).toLocaleDateString() %>
                </p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-warning text-center" role="alert">
        No games found!
      </div>
    <% } %>
  </div>

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
