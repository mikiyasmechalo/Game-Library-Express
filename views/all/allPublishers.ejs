<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Publishers</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>

<body class="bg-dark text-white p-5">
  <div class="container-fluid">
    <h1 class="text-center mb-5 text-info">All Publishers</h1>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% if (locals.publishers && publishers.length> 0) { %>
        <% publishers.forEach(publisher=> { %>
          <div class="col">
            <div class="card h-100 bg-secondary text-white rounded-3 shadow">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title text-info"><a href="/publishers/<%= publisher.id %>"
                    class="text-white text-decoration-none">
                    <%= publisher.name %>
                  </a></h5>
                <p class="card-text flex-grow-1">
                  <%= publisher.description %>
                </p>
              </div>
            </div>
          </div>
          <% }) %>
            <% } else { %>
              <div class="col-12">
                <div class="alert alert-warning text-center" role="alert">
                  No publishers found!
                </div>
              </div>
              <% } %>
    </div>
    <div class="d-flex justify-content-center mt-5 gap-3">
      <div class="text-center mt-5">
        <a href="/publishers/create" class="btn btn-info btn-lg rounded-pill shadow-sm">Add a new Publisher</a>
      </div>
      <div class="text-center mt-5">
        <a href="/" class="btn btn-info btn-lg rounded-pill shadow-sm">Back to Home</a>
      </div>
    </div>
  </div>
  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>