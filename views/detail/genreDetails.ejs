<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Genre Details</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-dark text-white p-5">
  <div class="container-fluid">
    <a href="/" class="btn btn-info mb-4">Back to Inventory</a>
    <h1 class="text-center mb-4 text-info">
      <%= genre.name %>
    </h1>
    <hr class="border-info mb-4">

    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card bg-secondary text-white mb-4">
          <div class="card-body">
            <h5 class="card-title">Description</h5>
            <p class="card-text">
              <%= genre.description %>
            </p>
          </div>
        </div>

        <h5 class="mt-4">Games in this genre:</h5>
        <% if (genre.games && genre.games.length> 0 && genre.games[0].id) { %>
          <ul class="list-group list-group-flush">
            <% genre.games.forEach(game=> { %>
              <li class="list-group-item bg-secondary text-white">
                <a href="/games/details?id=<%= game.id %>" class="text-info text-decoration-none">
                  <%= game.title %>
                </a>
              </li>
              <% }); %>
          </ul>
          <% } else { %>
            <div class="alert alert-warning">No games found for this genre.</div>
            <% } %>
              <div class="mt-3">
                <a href="/genres/update/<%=genre.id%>" class="btn btn-info">Update Genre</a>
                <form action="/genres/delete/<%=genre.id%>" method="post" class="delete-form ">
                  <button type="submit" class="btn btn-danger mt-2"
                    onclick="return confirm('Are you sure you want to delete this item?');">
                    Delete Genre
                  </button>
                </form>
              </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>